<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context=".Push_up">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:indeterminate="false"
                android:max="100"
                android:progress="30"
                android:progressDrawable="@drawable/style_circle_fill_push_up"
                android:secondaryProgress="100"
                android:layout_marginLeft="20dp"
                android:id="@+id/donut_progress"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="15dp"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:background="@drawable/line_workouts"
                android:id="@+id/imageView10"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="27dp">

                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="22dp"
                    android:id="@+id/imageView11"
                    android:background="@drawable/total"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:id="@+id/reps"
                    android:layout_marginLeft="0dp"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp" />

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="18dp"
                    android:id="@+id/imageView14"
                    android:background="@drawable/reps"
                    android:layout_marginLeft="7dp" />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exp "
                    android:id="@+id/exp_push"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="220dp"
                    android:layout_height="2dp"
                    android:id="@+id/progressBar"
                    android:layout_marginTop="8dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/style_horizontal_push_ups"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L10"
                    android:id="@+id/textView"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

            </LinearLayout>

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageButton
                    android:layout_width="97dp"
                    android:layout_height="29dp"
                    android:background="@drawable/push_up"
                    android:id="@+id/imageButton12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2-3-4-5-6"
                    android:id="@+id/textView6"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="125dp" />
            </LinearLayout>

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageButton
                    android:layout_width="138dp"
                    android:layout_height="23dp"
                    android:background="@drawable/time_push"
                    android:id="@+id/imageButton11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20-6-2016"
                    android:id="@+id/textView5"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="85dp" />
            </LinearLayout>

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/statistic_push"
                android:id="@+id/imageView9" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/start"
                android:id="@+id/imageView8"
                android:layout_marginTop="10dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
