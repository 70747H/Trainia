<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context=".Profile">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/profile"
                android:id="@+id/imageButton2" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abdelrahman Mekki"
                    android:id="@+id/P_Name"
                    android:textColor="#eeeef6" />

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="17dp"
                    android:background="@drawable/daily_target"
                    android:id="@+id/imageView5" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="155dp"
                    android:layout_height="15dp"
                    android:id="@+id/progressBar1"
                    android:indeterminate="false"
                    android:clickable="false" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="13dp"
                        android:background="@drawable/weight"
                        android:id="@+id/imageView6" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="17dp"
                        android:text=" 79 Kg"
                        android:id="@+id/W_kg"
                        android:textColor="#d1cece"
                        android:textSize="9dp" />

                    <Space
                        android:layout_width="20px"
                        android:layout_height="20px" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="13dp"
                        android:background="@drawable/height"
                        android:id="@+id/imageView7" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="17dp"
                        android:text=" 184 cm"
                        android:id="@+id/H_Cm"
                        android:textColor="#d1cece"
                        android:textSize="9dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fitness Goal"
                android:layout_marginLeft="30dp"
                android:id="@+id/fitness"
                android:textColor="#ffffff"
                android:textSize="13dp" />
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="47dp"
                android:background="@drawable/push_ups"
                android:id="@+id/imageButton3"
                android:layout_marginLeft="0dp" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <ImageButton
                android:layout_width="117dp"
                android:layout_height="47dp"
                android:background="@drawable/pull_ups"
                android:id="@+id/imageButton4"
                android:layout_marginRight="0dp" />
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageButton
                android:layout_width="117dp"
                android:layout_height="47dp"
                android:background="@drawable/squat"
                android:id="@+id/imageButton5" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <ImageButton
                android:layout_width="117dp"
                android:layout_height="47dp"
                android:background="@drawable/sit_ups"
                android:id="@+id/imageButton6" />
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Goal"
                android:layout_marginLeft="30dp"
                android:id="@+id/daily"
                android:textColor="#ffffff"
                android:textSize="13dp" />
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="@drawable/calorie"
                android:id="@+id/imageButton7" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <ImageButton
                android:layout_width="117dp"
                android:layout_height="47dp"
                android:background="@drawable/steps"
                android:id="@+id/imageButton10"
                android:layout_marginLeft="23dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:id="@+id/logOut"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

</RelativeLayout>
