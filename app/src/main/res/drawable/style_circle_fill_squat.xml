<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/secondaryProgress">
        <rotate
            android:fromDegrees="0"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="50.0"
                android:useLevel="true" >
                <gradient
                    android:centerColor="#282e59"
                    android:endColor="#282e59"
                    android:startColor="#282e59"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="0"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="50.0"
                android:useLevel="true" >
                <gradient
                    android:centerColor="#e65252"
                    android:endColor="#e65252"
                    android:startColor="#e65252"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>

</layer-list>